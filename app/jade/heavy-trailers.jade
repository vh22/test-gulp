extends _modules/layout
block title
  - title = "Heavy trailers"
block body
  - isHeavyTransport = true
  - isHeavyTrailers = true
  //wrapper starts
  .wrapper(data-add-class-parent data-nav-toggle-parent)
    include _organisms/header
    main.content(data-shifted-elements)
      .container
        header.content-header
          ul.list.list-inline.list-delimited.breadcrumbs
            li
              a(href="index.html") Avi cranes
            li
              a(href="heavy-about.html")
                span.is-lg-hidden heavy transport
                span.is-hidden.is-lg-inline-visible heavy transport
            li trailers
          h1 Trailers
        .two-column-layout
          .grid-col-xs-12.grid-col-lg-7.no-side-indents
            span.separator.is-hidden.is-lg-visible.left
            .content-main
              p Hydraulic cranes are usually composed of a hydraulic outriggers, a boom hoist or a lift cylinders, an auxiliary and a main hoist, a hell and base section, a telescoping section, a dynamometer for the weight, a main boom, a whip line, an auxiliary hook, a hook, a hoist line and a boom extension markings.
            .grid-row
              .grid-col-xs-6.grid-col-md-4
                h2.h4.list-title up to 100 ton
                ul.list.list-of-columns
                  li
                    a(href="#") Valla 180 E
                  li
                    a(href="#") Ormig T33
                  li
                    a(href="#") Grove model 24
                  li
                    a(href="#") Kobelco RK 70
                  li
                    a(href="#") Grove AP 308
                  li
                    a(href="#") Krupp 12 GMT-I
                  li
                    a(href="#") Krupp KMK 2025
                h2.h4.list-title up to 200 ton
                ul.list.list-of-columns
                  li
                    a(href="#") Valla 180 E
                  li
                    a(href="#") Ormig T33
                  li
                    a(href="#") Grove model 24
                  li
                    a(href="#") Kobelco RK 70
              .grid-col-xs-6.grid-col-md-4
                h2.h4.list-title up to 500 ton
                ul.list.list-of-columns
                  li
                    a(href="#") Valla 180 E
                  li
                    a(href="#") Ormig T33
                  li
                    a(href="#") Grove model 24
                  li
                    a(href="#") Kobelco RK 70
          .grid-col-xs-12.grid-col-lg-5
            .content-sidebar.is-hidden.is-lg-inline-visible
              figure.info-box
                img(src="images/content/img-box-info-1.jpg" width="428" height="618" alt="image description").responsive-img.scalable-img
                figcaption.info-box-caption
                  a(href="heavy-order.html").btn.btn-primary ORDER A TRAILER
  include _organisms/footer